{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section 
        class="avatar"
        style= "background: url({{teacher.avatar_url}}) no-repeat center center / cover">
    </section>
    
    <section class="infos">
        <div class="item">
            <div>Professor:</div>
            <div>{{teacher.name}}</div>
        </div>

        <div class="item">
            <div>Idade:</div>
            <div>{{teacher.age}}</div>
        </div>

        <div class="item">
            <div>Grau de Escolaridade:</div>
            <div>{{teacher.education_level}}</div>
        </div>

        <div class="item">
            <div>Modalidade de Aula:</div>
            <div>{{teacher.class_type}}</div>
        </div>

        <div class="item">
            <div>Mat√©rias Lecionadas:</div>
            <div>
                {% for subject in teacher.subjects_taught%}
                    <span>{{subject}}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Cadastrado desde:</div>
            <div>{{teacher.created_at}}</div>
        </div>

            <a class="button_edit" href="/teachers/{{teacher.id}}/edit" >Editar</a>
    </section>
</div>

{% endblock content %}