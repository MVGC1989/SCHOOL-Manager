{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section 
        class="avatar"
        style= "background: url({{student.avatar_url}}) no-repeat center center / cover">
    </section>

    <section class="infos">

        <div class="item">
            <div>Aluno:</div>
            <div>{{student.name}}</div>
        </div>

        <div class="item">
            <div>Aniversário:</div>
            <div>{{student.birth}}</div>
        </div>

        <div class="item">
            <div>E-mail:</div>
            <div>{{student.email}}</div>
        </div>

        <div class="item">
            <div>Ano Escolar:</div>
            <div>{{student.school_year}}</div>
        </div>

        <div class="item">
            <div>Carga Horária Semanal:</div>
            <div>{{student.weekly_workload}} horas</div>
        </div>

        <div class="item">
            <div>Aluno(a) do(a):</div>
            <div>Professor(a): {{student.teacher_name}}<!--teacher_name é o apelido criado no find--></div>
        </div>
        
        <a 
        class="button_edit" 
        href="/students/{{student.id}}/edit" >Editar
        </a>
    </section>
</div>

{% endblock content %}